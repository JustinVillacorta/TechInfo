<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Model Name -->
    <LinearLayout
        android:id="@+id/model_name_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/model_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/ModelNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter model name"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <!-- Specs -->
    <LinearLayout
        android:id="@+id/specs_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/specs_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/SpecsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter specs"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <!-- Category -->
    <LinearLayout
        android:id="@+id/category_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/CategoryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter category"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <!-- Additional fields can be added in the same way -->

    <!-- Brand -->
    <LinearLayout
        android:id="@+id/brand_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/brand_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/BrandEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter brand"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <!-- Add the rest of the fields like Socket Type, Base Clock Speed, etc. in the same format -->

</LinearLayout>
