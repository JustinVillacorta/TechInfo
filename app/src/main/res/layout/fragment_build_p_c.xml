<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Horizontal Bar Charts Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Processing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processing"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:progress="70"
                android:max="100"
                android:progressTint="@android:color/holo_blue_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Rendering -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rendering"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:progress="85"
                android:max="100"
                android:progressTint="@android:color/holo_green_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Data Transfer Speed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Memory"
                android:textSize="16sp" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:progress="65"
                android:max="100"
                android:progressTint="@android:color/holo_orange_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Data Storage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Storage"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:progress="90"
                android:max="100"
                android:progressTint="@android:color/holo_red_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90%"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Power Capacity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power Capacity"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:progress="75"
                android:max="100"
                android:progressTint="@android:color/holo_purple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView for Components -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/componentsRecyclerView"
        android:layout_width="379dp"
        android:layout_height="380dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/BuildBTN"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Build your pc" />

</LinearLayout>
