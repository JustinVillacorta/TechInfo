<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Horizontal Bar Charts Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Processing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Processing"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progressbarCpu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:max="100"
                android:progressTint="@android:color/holo_blue_light" />

        </LinearLayout>

        <!-- Rendering -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rendering"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:id="@+id/progressbarGpu"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:max="100"
                android:progressTint="@android:color/holo_green_light" />

        </LinearLayout>

        <!-- Memory -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Memory"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:id="@+id/progressbarMemory"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:max="100"
                android:progressTint="@android:color/holo_orange_light" />

        </LinearLayout>

        <!-- Storage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Storage"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressbarStorage"
                android:layout_weight="3"

                android:max="100"
                android:progressTint="@android:color/holo_red_light" />

        </LinearLayout>

        <!-- Power Capacity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Power Capacity"
                android:textSize="16sp" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/progressbarPsu"
                android:max="100"

                android:progressTint="@android:color/holo_purple" />

        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for Components -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/componentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Build Button -->
    <Button
        android:id="@+id/BuildBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build your PC"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="18sp" />
</LinearLayout>
