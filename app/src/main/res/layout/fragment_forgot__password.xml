<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".Fragments.Admin.ForgotPassword">

    <!-- CardView Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title for the Forgot Password screen -->
            <TextView
                android:id="@+id/forgotPasswordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Forgot Password"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Email Input Field -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <!-- Get OTP and OTP Input Fields (Left and Right) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Get OTP Button on the left -->

                <!-- OTP Input on the right -->
                <Button
                    android:id="@+id/getOtpButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#003366"
                    android:padding="12dp"
                    android:text="Get OTP"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/otpInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="OTP"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- New Password Field (Initially Hidden) -->
            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:visibility="gone" />

            <!-- Confirm Password Field (Initially Hidden) -->
            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:visibility="gone" />

            <!-- Password checklist (Initially Hidden) -->
            <TextView
                android:id="@+id/passwordChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:text="Password Strength Checklist"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:text="Submit" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
