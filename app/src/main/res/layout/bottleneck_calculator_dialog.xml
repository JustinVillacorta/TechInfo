<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- TextView to display the title "Bottleneck Percentage" -->
    <TextView
        android:id="@+id/bottleneckTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Bottleneck Results"
        android:layout_marginBottom="8dp"/>

    <!-- ProgressBar for the bottleneck percentage -->
    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="364dp"
        android:layout_height="190dp"
        android:max="100"
        android:layout_marginBottom="16dp" />

    <!-- TextView to display the actual percentage number below the progress bar -->
    <TextView
        android:id="@+id/bottleneckPercentageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="0%"
        android:layout_marginBottom="16dp"/>

    <!-- TextView to display a custom message -->
    <TextView
        android:id="@+id/bottleneckMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="normal"
        android:text="Your system is running smoothly" /> <!-- Add a custom message here -->

</LinearLayout>
