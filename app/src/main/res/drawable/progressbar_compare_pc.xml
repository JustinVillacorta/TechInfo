<!-- res/drawable/progressbar_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background for the progress bar track -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/pastel"/> <!-- Background color -->
            <corners android:radius="60dp"/> <!-- Make sure this is rounded enough -->
        </shape>
    </item>

    <!-- Progress for the progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/Red_progressbar"/> <!-- Progress color -->
                <corners android:radius="600dp"/> <!-- Match the background's corner radius -->
            </shape>
        </clip>
    </item>

</layer-list>
