<!-- res/drawable/progressbar_custom.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background for the progress bar track -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/Green_progressbar"/>
            <corners android:radius="15dp"/> <!-- Background color -->
        </shape>
    </item>

    <!-- Progress for the progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/pastel"/>
                <corners android:radius="15dp"/> <!-- Progress color -->
            </shape>
        </clip>
    </item>

</layer-list>
